import java.util.*;
 
class Main3
{
 public static void main(String args[])
 {
 int i,j;
 int n,k=1;
 System.out.print("Enter the number of rows you want to print: ");  
Scanner sc = new Scanner(System.in);  
n = sc.nextInt(); 
 
     for(i=1;i<=n;i++)
     {
        for(j=1;j<=i;j++,k++)
         {
             System.out.printf("%4c",(char)(k+64));
         }
 
         System.out.println("");
     }
 }
